// Prisma Schema for VAXAL Management System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// ユーザー管理
enum EngineerRole {
  MASTER  // マスターアカウント
  STAFF   // スタッフアカウント
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum BloodType {
  A
  B
  O
  AB
  UNKNOWN
}

// マスターアカウント(会社)
model Company {
  id                    Int      @id @default(autoincrement())
  
  @@map("companies")
  companyNumber         String   @unique // 業者番号
  companyName           String
  establishedDate       DateTime?
  businessContent       String?
  capital               String?
  employeeCount         Int?
  address               String
  revenue               String?
  representativeName    String   // 代表者名
  phoneNumber           String
  faxNumber             String?
  email                 String   @unique
  websiteUrl            String?
  majorClients          String?
  relatedCompanies      String?
  constructionLicense   Boolean  @default(false)
  registrationStatus    Boolean  @default(false)
  licenseStatus         Boolean  @default(false)
  qualificationStatus   Boolean  @default(false)
  insuranceName         String?
  insuranceNumber       String?
  coverageAmount        String?
  workersCompensation   Boolean  @default(false)
  invoiceNumber         String?
  businessHours         String?
  availableServices     String?  @db.Text // 対応可能業種（カンマ区切り）
  serviceExperience     Json?    // 各業種経験年数
  constructionHistory   String?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // リレーション
  masterUser            EngineerUser?    @relation("CompanyMaster")
  staffUsers            EngineerUser[]   @relation("CompanyStaff")
  projects              Project[]
  
  @@index([companyNumber])
}

// アカウントタイプ
enum VaxalAccountType {
  STAFF         // VAXAL社員
  CALL_CENTER   // コールセンター
}

// VAXAL社員
model VaxalUser {
  id                    Int      @id @default(autoincrement())
  
  @@map("vaxal_users")
  email                 String   @unique
  password              String
  accountType           VaxalAccountType @default(STAFF) // アカウントタイプ
  
  // 基本情報
  name                  String
  phoneNumber           String
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // リレーション
  createdProjects       Project[] @relation("CreatedByVaxal")
  vaxalCalendarEvents   CalendarEvent[] @relation("VaxalCalendar")
  notifications         Notification[]
  evaluations           EngineerEvaluation[] @relation("EvaluatedByVaxal")
}

// エンジニア
model EngineerUser {
  id                    Int      @id @default(autoincrement())
  
  @@map("engineer_users")
  email                 String   @unique
  password              String
  role                  EngineerRole
  
  // 基本情報
  name                  String
  address               String?
  bloodType             BloodType?
  birthDate             DateTime?
  gender                Gender?
  phoneNumber           String
  emergencyContact      String?
  
  // 会社情報
  companyId             Int?
  company               Company? @relation("CompanyStaff", fields: [companyId], references: [id])
  masterCompanyId       Int?     @unique
  masterCompany         Company? @relation("CompanyMaster", fields: [masterCompanyId], references: [id])
  
  // 業務情報
  availableServices     String?  @db.Text // 対応可能業種（カンマ区切り）
  serviceExperience     Json?    // 各業種経験年数
  hasLicense            Boolean  @default(false)
  hasQualification      Boolean  @default(false)
  hasWorkersComp        Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // リレーション
  assignedProjects      Project[] @relation("AssignedEngineer")
  reports               Report[]
  engineerCalendarEvents CalendarEvent[] @relation("EngineerCalendar")
  notifications         Notification[]
  evaluations           EngineerEvaluation[] @relation("EngineerEvaluations")
}

// 案件管理
// ステータス: 1=注文仮登録, 2=注文依頼(割り振り完了), 3=完了確認(報告待ち), 4=完了, 5=残工事あり
enum ProjectStatus {
  PENDING // 1: 注文仮登録
  ASSIGNED // 2: 注文依頼（割り振り完了）
  REPORTED // 3: 完了確認（報告待ち）
  COMPLETED // 4: 完了
  REMAINING_WORK // 5: 残工事あり
}

enum WorkType {
  NEW_INSTALLATION  // 新設
  REFORM            // リフォーム
  REPLACEMENT       // 交換
}

enum WorkCategory {
  MAIN_WORK         // 本工事
  CORRECTION        // 是正
  SITE_SURVEY       // 現場調査
}

enum ProductType {
  ECO_CUTE          // エコキュート
  GAS_WATER_HEATER  // ガス給湯器
  ELECTRIC_HEATER   // 電気温水器
  BATHROOM_DRYER    // 浴室乾燥機
  SOLAR_PANEL       // 太陽光パネル
  OTHER             // その他
}

enum PaymentMethod {
  CASH              // 現金
  CARD              // カード
  LOAN              // ローン
  BANK_TRANSFER     // 銀行振込
  ELECTRONIC_MONEY  // 電子マネー
}

enum WarrantyPeriod {
  FIVE_YEARS        // 5年
  SEVEN_YEARS       // 7年
  TEN_YEARS         // 10年
}

enum ContactMethod {
  EMAIL
  PHONE
  INQUIRY_FORM
  LINE
  SNS
  OTHER
}

enum RevisitType {
  COMPLAINT      // クレーム
  REPURCHASE     // 再購入
  ANOTHER_CASE   // 別案件
}

enum BuildingType {
  MANSION           // マンション
  DETACHED_HOUSE    // 戸建て
  APARTMENT         // アパート
  OTHER             // その他
}

enum TankType {
  THIN              // 薄型
  SQUARE            // 角型
}

enum ReplacementType {
  ECO_TO_ECO        // エコキュート→エコキュート
  GAS_TO_ECO        // ガス給湯器→エコキュート
  ELECTRIC_TO_ECO   // 電気温水器→エコキュート
  OTHER             // その他
}

enum SaleType {
  ECO_CUTE          // エコキュート
  GAS_WATER_HEATER  // ガス給湯器
  ELECTRIC_HEATER   // 電気温水器
  OTHER             // その他
}

model Project {
  id                    Int      @id @default(autoincrement())
  projectNumber         String   @unique // 案件番号
  
  @@map("projects")
  
  // 基本情報
  siteName              String
  siteAddress           String
  customerName          String
  customerBirthDate     DateTime // お客様の生年月日
  applicantRelationship String?  // 申込者の続柄
  customerAddress       String
  customerPhone         String
  firstInquiryDate      DateTime // 初回お問い合わせ日時
  
  // 工事情報
  workContent           ProductType
  workType              WorkType
  workCategory          WorkCategory
  workTime              String   @default("09:00~17:00")
  overview              String?
  
  // 商品情報(エコキュートの例)
  productSetNumber      String?
  productTankNumber     String?
  productHeatPumpNumber String?
  productRemoteNumber   String?
  productBaseNumber     String?
  productFallNumber     String?
  productUlbroNumber    String?
  productOtherNumber    String?  // その他の品番
  
  // 支払い情報
  paymentAmount         Int?
  productWarranty       Boolean  @default(false)
  warrantyPeriod        WarrantyPeriod? // 商品保証期間
  paymentMethod         PaymentMethod?
  subsidyAmount         Int?     // 補助金金額
  sellingPrices         Json?    // 動的売価データ { "交換できるくん": 100000, "キンライサー": 95000, ... }
  costPrice             Int?     // 原価
  hasHandMoney          Boolean  @default(false) // 手元の有無
  handMoneyAmount       Int?     // 手元の代金
  idCardRequired        Boolean  @default(false)
  idCardObtained        Boolean  @default(false)
  bankbookRequired      Boolean  @default(false)
  bankbookObtained      Boolean  @default(false)
  
  // メモ
  additionalWork        String?  // 追加工事
  existingProductInfo   String?  // 既存商品情報
  constructionNotes     String?  // 施工指示
  
  // 日程
  workDate              DateTime?
  receptionDate         DateTime?
  orderDate             DateTime?
  expectedCompletionDate DateTime?
  completionDate        DateTime?
  
  // 社内メモ(VAXAL専用)
  firstContactMethod    ContactMethod?
  communicationTool     String?
  internalNotes         String?
  
  // 再訪問情報
  revisitType           RevisitType?  // 再訪問種別
  revisitDateTime       DateTime?     // 再訪問日時
  revisitCount          Int?          // 再訪問回数
  crossSellContent      String?       // クロスセル内容
  
  // 元請け情報
  contractorName        String?
  contractorPhone       String?
  contractorNotes       String?
  
  // VAXAL担当者情報
  receptionStaff        String?
  receptionStaffPhone   String?
  salesStaff            String?
  salesStaffPhone       String?
  constructionStaff     String?
  constructionStaffPhone String?
  staffNotes            String?
  
  // 建築情報
  roofingDate           DateTime?
  demolitionDate        DateTime?
  buildingType          BuildingType?
  installationFloor     String?
  installationLocation  String?
  keyboxNumber          String?
  storageLocation       String?
  parkingSpace          String?
  buildingNotes         String?
  
  // 商品情報詳細
  productCategory       String?
  productSeries         String?
  deliveryDate          DateTime?
  shipmentDate          DateTime?
  productNotes          String?
  
  // 配送情報
  deliveryTime          String?
  deliverySpecification String?
  deliveryLocation      String?
  deliveryNotes         String?
  
  // 現場調査情報
  surveyRequestDate     DateTime?
  surveyDate            DateTime?
  surveyTime            String?
  surveyCompany         String?
  surveyStaff           String?
  reSurveyDate          DateTime?
  surveyNotes           String?
  
  // 施工情報
  constructionDate      DateTime?
  constructionCompany   String?
  constructionStaffName String?
  constructionEmail     String?
  constructionPhone     String?
  remainingWorkDate     DateTime?
  constructionInfoNotes String?
  
  // 請負金額(マスターのみ閲覧可能)
  contractAmount        Int?
  
  // 遠方出張費
  hasRemoteTravelFee    Boolean  @default(false) // 遠方出張費の有無
  remoteTravelDistance  Int?     // 距離(km)
  remoteTravelFee       Int?     // 金額
  
  // ステータス
  status                ProjectStatus @default(PENDING)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  createdByVaxalId      Int
  createdByVaxal        VaxalUser @relation("CreatedByVaxal", fields: [createdByVaxalId], references: [id])
  
  // リレーション
  companyId             Int?
  company               Company? @relation(fields: [companyId], references: [id])
  assignedEngineerId    Int?
  assignedEngineer      EngineerUser? @relation("AssignedEngineer", fields: [assignedEngineerId], references: [id])
  reports               Report[]
  files                 ProjectFile[]
  calendarEvents        CalendarEvent[]
  mainInfo              MainInfo?
  notifications         Notification[]
  
  @@index([status])
  @@index([createdByVaxalId])
  @@index([companyId])
  @@index([assignedEngineerId])
  @@index([workDate])
  @@index([createdAt])
}

// 主要情報
model MainInfo {
  id                    Int      @id @default(autoincrement())
  
  @@map("main_info")
  projectNumber         String   @unique // 案件番号で紐付け
  
  // 施工指示
  constructionNotes     String?  @db.Text
  
  // 元請け情報
  contractorName        String?
  contractorPhone       String?
  contractorNotes       String?  @db.Text
  
  // VAXAL担当者情報
  receptionStaff        String?
  receptionStaffPhone   String?
  salesStaff            String?
  salesStaffPhone       String?
  constructionStaff     String?
  constructionStaffPhone String?
  staffNotes            String?  @db.Text
  
  // 建築情報
  roofingDate           DateTime?
  demolitionDate        DateTime?
  buildingType          BuildingType?
  installationFloor     String?
  installationLocation  String?  @db.Text
  keyboxNumber          String?
  storageLocation       String?
  parkingSpace          String?  @db.Text
  buildingNotes         String?  @db.Text
  
  // 商品情報
  productCategory       String?
  productSeries         String?
  deliveryDate          DateTime?
  shipmentDate          DateTime?
  productNotes          String?  @db.Text
  
  // 配送情報
  deliveryTime          String?
  deliverySpecification String?
  deliveryLocation      String?
  deliveryNotes         String?  @db.Text
  
  // 現場調査情報
  surveyRequestDate     DateTime?
  surveyDate            DateTime?
  surveyTime            String?
  surveyCompany         String?
  surveyStaff           String?
  reSurveyDate          DateTime?
  surveyNotes           String?  @db.Text
  
  // 施工情報
  constructionDate      DateTime?
  constructionCompany   String?
  constructionStaffName String?
  constructionPhone     String?
  constructionEmail     String?
  remainingWorkDate     DateTime?
  constructionInfoNotes String?  @db.Text
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // リレーション
  projectId             Int      @unique
  project               Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// カレンダーイベント
enum EventType {
  CONFIRMED         // 確定予定(青)
  AVAILABLE         // 対応可能日(緑)
}

model CalendarEvent {
  id          Int       @id @default(autoincrement())
  title       String
  
  @@map("calendar_events")
  description String?
  startDate   DateTime
  endDate     DateTime
  eventType   EventType
  
  // VaxalUserまたはEngineerUserのどちらか
  vaxalUserId      Int?
  vaxalUser        VaxalUser?     @relation("VaxalCalendar", fields: [vaxalUserId], references: [id])
  engineerUserId   Int?
  engineerUser     EngineerUser?  @relation("EngineerCalendar", fields: [engineerUserId], references: [id])
  
  projectId   Int?
  project     Project?  @relation(fields: [projectId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([vaxalUserId, startDate])
  @@index([engineerUserId, startDate])
  @@index([projectId])
}

// 報告書
enum ReportType {
  SITE_SURVEY       // 現場調査報告
  PICKUP            // 集荷報告
  CHECK_IN          // check in報告
  COMPLETION        // 工事完了報告
  UNLOADING         // 荷卸し報告
}

enum ReportStatus {
  PENDING           // 未着手
  COMPLETED         // 完了
}

model Report {
  id          Int          @id @default(autoincrement())
  reportType  ReportType
  
  @@map("reports")
  status      ReportStatus @default(PENDING)
  notes       String?
  
  // 集荷報告用（旧フィールド - 後方互換性のため残す）
  pickupMaterials String?   // 持ち出し部材
  
  // 工事完了報告用
  isWorkCompleted   Boolean?  // 工事完了/未完了
  remainingWorkDate DateTime? // 残工事日
  
  // エンジニア入力情報
  existingManufacturer  String?           // 既設メーカー
  yearsOfUse            Int?              // 使用年数
  replacementType       ReplacementType?  // 交換種別
  replacementManufacturer String?         // 交換メーカー
  tankCapacity          String?           // タンク容量
  tankType              TankType?         // 薄型or角型
  hasSpecialSpec        Boolean  @default(false) // 特殊仕様有無
  materialUnitPrice     Int?              // 部材単価
  highwayFee            Int?              // 高速代
  gasolineFee           Int?              // ガソリン代
  saleType              SaleType?         // 売却種別
  saleFee               Int?              // 売却費
  
  projectId   Int
  project     Project      @relation(fields: [projectId], references: [id])
  engineerUserId Int
  engineerUser   EngineerUser @relation(fields: [engineerUserId], references: [id])
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  files       ReportFile[]
  pickupMaterialsList PickupMaterial[] // 集荷部材リスト（新）
  
  @@index([projectId])
  @@index([engineerUserId])
  @@index([status])
}

// ファイル管理
enum FileCategory {
  SITE_FOLDER           // 現場フォルダ
  ARRANGEMENT_FOLDER    // 手配フォルダ
  SURVEY_REPORT         // 現場調査報告
  PICKUP_REPORT         // 集荷報告
  CHECKIN_REPORT        // check in報告
  COMPLETION_REPORT     // 工事完了報告
  UNLOADING_REPORT      // 荷卸し報告
  APPEARANCE_PHOTO      // 身だしなみ写真
  BEFORE_WORK_PHOTO     // 工事前写真
  SUBSIDY_PHOTO         // 補助金申請写真
  REGULATION_PHOTO      // 規定写真
  FREE_PHOTO            // フリーフォルダ
}

model ProjectFile {
  id          Int          @id @default(autoincrement())
  fileName    String
  
  @@map("project_files")
  fileUrl     String
  fileSize    Int
  mimeType    String
  category    FileCategory
  
  projectId   Int
  project     Project      @relation(fields: [projectId], references: [id])
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ReportFile {
  id          Int          @id @default(autoincrement())
  fileName    String
  
  @@map("report_files")
  fileUrl     String
  fileSize    Int
  mimeType    String
  
  reportId    Int
  report      Report       @relation(fields: [reportId], references: [id])
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// 月次管理
model MonthlyExpense {
  id                    Int      @id @default(autoincrement())
  
  @@map("monthly_expenses")
  year                  Int      // 年
  month                 Int      // 月（1-12）
  
  // 経費項目
  wasteDisposalFee      Int?     // 産廃処分費
  vehicleFee            Int?     // 車両費
  laborCost             Int?     // 人件費
  warehouseFee          Int?     // 倉庫管理費
  officeFee             Int?     // 事務所費
  communicationFee      Int?     // 通信費
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // 年月の組み合わせをユニークにする
  @@unique([year, month])
}

// 在庫管理
enum UnitType {
  PIECE   // 個数
  METER   // メートル
}

model InventoryItem {
  id                    Int      @id @default(autoincrement())
  name                  String   // 部材名（必須）
  
  @@map("inventory_items")
  productName           String?  // 商品名（任意）
  manufacturer          String?  // メーカー（任意）
  partNumber            String?  // 品番（任意）
  unitPrice             Int      // 現在の単価（必須）
  unitType              UnitType @default(PIECE) // 個数 or メートル（必須）
  currentStock          Int      @default(0) // 現在の在庫数（ステータス）
  threshold             Int      @default(0) // 閾値（必須）
  displayOrder          Int      @default(0) // 表示順序
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // リレーション
  priceHistory          InventoryPriceHistory[]
  pickupMaterials       PickupMaterial[]
}

// 在庫単価履歴
model InventoryPriceHistory {
  id                    Int      @id @default(autoincrement())
  
  @@map("inventory_price_history")
  inventoryItemId       Int
  inventoryItem         InventoryItem @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  
  price                 Int      // 単価
  effectiveFrom         DateTime // 適用開始日
  effectiveTo           DateTime? // 適用終了日（nullの場合は現在も有効）
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([inventoryItemId])
  @@index([effectiveFrom])
}

// 売価タイプマスタ
model SellingPriceType {
  id           Int      @id @default(autoincrement())
  
  @@map("selling_price_types")
  name         String   @unique  // 売価タイプ名（例: "交換できるくん"）
  displayOrder Int      @default(0) // 表示順序
  isActive     Boolean  @default(true) // 有効/無効
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([displayOrder])
}

// 集荷部材
model PickupMaterial {
  id                    Int      @id @default(autoincrement())
  
  @@map("pickup_materials")
  reportId              Int
  report                Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  inventoryItemId       Int
  inventoryItem         InventoryItem @relation(fields: [inventoryItemId], references: [id])
  
  // スナップショット（報告時点の情報を保存）
  inventoryItemName     String   // 部材名
  productName           String?  // 商品名
  manufacturer          String?  // メーカー
  partNumber            String?  // 品番
  quantity              Int      // 使用数量
  unitType              UnitType // 単位タイプ
  unitPrice             Int      // 報告時点の単価
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([reportId])
  @@index([inventoryItemId])
}

// 通知管理
enum NotificationType {
  REPORT_SUBMITTED      // エンジニアから報告が提出された
  ORDER_RECEIVED        // 注文を受け付けた
  PROJECT_ASSIGNED      // 案件が割り振られた
  PROJECT_COMPLETED     // 案件が完了した
  INVENTORY_LOW_STOCK   // 在庫が要発注レベル
  INVENTORY_OUT_OF_STOCK // 在庫切れ
}

model Notification {
  id                    Int      @id @default(autoincrement())
  type                  NotificationType
  
  @@map("notifications")
  title                 String   // 通知タイトル
  message               String   @db.Text // 通知メッセージ
  isRead                Boolean  @default(false) // 既読フラグ
  
  // 関連情報
  projectId             Int?
  project               Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  // 通知先ユーザー（VaxalUserまたはEngineerUserのどちらか）
  vaxalUserId           Int?
  vaxalUser             VaxalUser? @relation(fields: [vaxalUserId], references: [id], onDelete: Cascade)
  engineerUserId        Int?
  engineerUser          EngineerUser? @relation(fields: [engineerUserId], references: [id], onDelete: Cascade)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([vaxalUserId, isRead])
  @@index([engineerUserId, isRead])
}

// 評価グレード
enum EvaluationGrade {
  S
  A
  B
  C
  D
  E
  F
  G
}

// エンジニア評価
model EngineerEvaluation {
  id                    Int      @id @default(autoincrement())
  
  @@map("engineer_evaluations")
  
  // 評価対象エンジニア
  engineerUserId        Int
  engineerUser          EngineerUser @relation("EngineerEvaluations", fields: [engineerUserId], references: [id], onDelete: Cascade)
  
  // 評価者（VAXAL社員）
  evaluatedByVaxalId    Int
  evaluatedByVaxal      VaxalUser @relation("EvaluatedByVaxal", fields: [evaluatedByVaxalId], references: [id])
  
  // 評価日
  evaluationDate        DateTime @default(now()) @db.DateTime(0)
  
  // === To VAXAL ===
  // VAXALへのレスポンス
